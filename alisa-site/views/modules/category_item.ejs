<div class="column col-4 col-lg-4 col-md-6 col-sm-12">
    <div class="card">
        <div class="card-image">
            <img src="<%=c.img %>" class="img-responsive"/>
        </div>
        <div class="card-header">
            <div class="card-title h5">
                <%=c.caption %>
            </div>
        </div>
        <div class="card-body">
            <%=c.description %>
        </div>
        <div class="card-footer product-footer">
            <a href="/category/<%=c.url %>" class="btn  btn-primary">Подробнее</a>
        </div>
    </div>
</div>